<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-5">

    <h2>Sign in</h2><br>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-groupe">
      <%= f.label :email, :for =>"email" %><br />
      <%= f.email_field :email, :class => 'form-control', :id => 'email' %>
    </div>
    <br>
    <div class="form-groupe">
      <%= f.label :password, :for =>"password" %>
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :id => 'password' %>  
    </div>
    <br>
      <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Sign in", :class => 'btn btn-default'%>
      </div>
      <br>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
